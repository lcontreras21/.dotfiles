#!/usr/bin/env bash

# tmuxp=`echo "AOC ASHP AWS BEAM CONFIG HERA" | tr ' ' '\n'`
tmuxp=`ls ~/.config/tmuxp | sed -r 's/(\w*)\.yaml/\1/'`
tmuxp_manual=`find ~/ClearlyEnergy ~/repos -maxdepth 2 -type f -name ".tmuxp.yaml"`

tmuxp_choices="$tmuxp\n$tmuxp_manual"

if [[ $# -eq 1 ]]; then
    selected=$1
else
    selected=`printf "$tmuxp_choices" | fzf`
fi

if [[ -z $selected ]]; then
    exit 0
fi

tmux_running=$(pgrep tmux)


session_name=$selected
if [[ $selected == *"${tmuxp_manual}"* ]]; then
    session_name=$(basename $(dirname ${selected}))
fi


if tmux has-session -t=$selected 2> /dev/null; then
    tmux attach -t $selected
else
    tmuxp load -d $selected
fi

tmux switch-client -t $session_name
